<%- include('../partials/header') %>

<h2>My Cases</h2>
<div id="cases-index">
    <table>
        <thead>
            <tr>
                <th>Subject</th>
                <th>Comment</th>
                <th>Case Number</th>
                <th>Status</th>
                <th>High Priority</th>
                <th>Requestor</th>
            </tr>
        </thead>
        <tbody>
            <% cases.forEach(c => { %>
                <tr>
                    <td><a href="/cases/<%= c._id %>"><%= c.subject %></a></td>
                    <td><%= c.comment[0] %></td>
                    <td><%= c.caseNum %></td>
                    <td><%= c.status %></td>
                    <td><%= c.highPriority %></td>
                    <td><%= c.requestor %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>