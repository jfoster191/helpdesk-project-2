<%- include('../partials/header') %>

<h1 id="my-cases">My Cases</h1>
<div id="cases-index">
    <table>
        <thead>
            <tr>
                <th>Subject</th>
                <th>Comment</th>
                <th>Case Number</th>
                <th>Status</th>
                <th>High Priority</th>
                <th>Requestor</th>
                <th>Assigned To</th>
            </tr>
        </thead>
        <tbody>
            <% cases.forEach(c => { %>
                <tr>
                    <td><a href="/cases/<%= c._id %>"><%= c.subject %></a></td>
                    <td><%= c.comment[0] %></td>
                    <td><%= c.caseNum %></td>
                    <td><%= c.status %></td>
                    <td><%= c.highPriority %></td>
                    <td><%= c.requestor.email %></td>
                    <% if(c.assignee){ %>
                        <td><%= c.assignee.email %></td>
                    <% } else{ %>
                        <td>Unassigned</td>
                    <% } %>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>