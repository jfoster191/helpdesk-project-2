<%- include('../partials/header') %>

<h1>Manage Users</h1>
<table>
    <thead>
        <tr>
            <th>Avatar</th>
            <th>Name</th>
            <th>Email</th>
            <th>Administrator</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(u => { %>
            <tr>
                <td><img height="25vmin" src="<%= u.avatar %>"></img></td>
                <td><%= u.name %></td>
                <td><%= u.email %></td>
                <td><%= u.adminPriv %></td>
                <td><form action="/users/<%= u._id %>/update" method="POST">
                    <input type="checkbox" name="adminPriv">
                    <button>Change Admin Priviledge</button>
                </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../partials/footer') %>